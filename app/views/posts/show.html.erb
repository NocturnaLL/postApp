Display Post<br /><br />

<b>ID </b><%= @post.id %><br />
<b>Title </b><%= @post.title %><br />
<b>Description </b><%= @post.text %><br />
<b>Category: </b><%= @post.category.title %>

<br/><br/>

<div class="panel panel-default">
  <div class="panel-heading">
    Comments
  </div>
  <div class="panel-body">

    <% @post.comments.each do |comment| %>
      <small><%= comment.user.email %> says:</small>
      <p><%= comment.body %></p>
    <% end %>

  </div>
</div>

<br/><br/>

<div class="panel panel-primary">
  <div class="panel-heading">
    Send a new comment
  </div>
  <div class="panel-body">
    <%= form_for [@post, @post.comments.build] do |f| %>
      <%= f.text_area :body, rows: 5 %><br>
      <%= f.submit 'Send' %>
    <% end %>
  </div>
</div>

<br/><br/>

<%= link_to "Back to idea list", posts_path %>
<br/>
<% if current_user.present? and current_user.id == @post.user_id %>
<%= link_to "Edit idea", edit_post_path(@post) %>

<%= link_to "Delete", post_path(@post), method: :delete %>
<%end%>
