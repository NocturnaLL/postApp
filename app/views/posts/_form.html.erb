<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'title', class: "form-control input-sm" %><br>
  <br>
  <%= f.label :text %>
  <br>
  <%= f.text_area :text, placeholder: "description", rows: 10 %><br>
  <br>
  <%= f.select :category_id, @categories %>
   <br />
   <br />
  <%= f.submit 'Send' %>
<% end %>
